@model IEnumerable<PrintingHouse.Models.OrderProperty>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SupId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SupFare)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Width)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Height)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductProperty)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SupId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SupFare)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Width)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Height)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order.OrderId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductProperty.ProductPropertyId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OrderTypeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.OrderTypeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.OrderTypeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
